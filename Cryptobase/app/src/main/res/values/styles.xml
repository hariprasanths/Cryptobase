<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="TextViewHeading" parent="Base.TextAppearance.AppCompat.Headline">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">24sp</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">serif-monospace</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:paddingBottom">16dp</item>
    </style>
    <style name="EditTextStyle" parent="EditTextStyle">
        <item name="android:scrollHorizontally">false</item>

    </style>
    <style name="TextViewKeyStyle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">24sp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">serif-monospace</item>
    </style>
    <style name="InputTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif</item>
        <item name="android:paddingLeft">8dp</item>
    </style>




    -<style name="AppTheme.NoActionBar">

    <item name="windowActionBar">false</item>

    <item name="windowNoTitle">true</item>

</style>

    <style parent="ThemeOverlay.AppCompat.Dark.ActionBar" name="AppTheme.AppBarOverlay"/>

    <style parent="ThemeOverlay.AppCompat.Light" name="AppTheme.PopupOverlay"/>
</resources>
